{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",
		"types": ["vitest/globals", "node"],
    "moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
	}
}
